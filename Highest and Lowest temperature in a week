#include <stdio.h>

int main() {
    int i;
    float temp[7];
    float highest, lowest;

    for (i = 0; i < 7; i++) {
        printf("Enter temperature for day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }
    highest = temp[0];
    lowest = temp[0];

    for (i = 1; i < 7; i++) {
        if (temp[i] > highest)
            highest = temp[i];

        if (temp[i] < lowest)
            lowest = temp[i];
    }
    printf("\nHighest Temperature of the week: %.2f", highest);
    printf("\nLowest Temperature of the week: %.2f", lowest);

    return 0;
}
