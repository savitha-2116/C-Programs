#include <stdio.h>

int main() {
    float rain[12], total = 0, avg;
    int i;

    printf("Enter rainfall for 12 months:\n");
    for(i = 0; i < 12; i++) {
        scanf("%f", &rain[i]);
        total = total + rain[i];
    }

    avg = total / 12;
    printf("Average rainfall = %.2f\n", avg);

    return 0;
}
