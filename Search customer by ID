#include <stdio.h>

struct Customer {
    int id;
    char name[30];
    char mobile[15];
};

int main() {
    int n, i, searchId;
    struct Customer c[10];

    printf("Enter number of customers: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nCustomer %d\n", i + 1);

        printf("ID: ");
        scanf("%d", &c[i].id);

        getchar();  // clear newline

        printf("Name: ");
        fgets(c[i].name, sizeof(c[i].name), stdin);

        printf("Mobile: ");
        fgets(c[i].mobile, sizeof(c[i].mobile), stdin);
    }

    printf("\nEnter ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++) {
        if(c[i].id == searchId) {
            printf("\nCustomer Found\n");
            printf("ID: %d\n", c[i].id);
            printf("Name: %s", c[i].name);
            printf("Mobile: %s", c[i].mobile);
            return 0;
        }
    }

    printf("Customer not found\n");
    return 0;
}
