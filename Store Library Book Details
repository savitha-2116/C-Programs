#include <stdio.h>

struct Book {
    int bookId;
    char title[50];
    char author[50];
};

int main() {
    struct Book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.bookId);

    getchar(); 

    printf("Enter Title: ");
    fgets(b.title, sizeof(b.title), stdin);

    printf("Enter Author: ");
    fgets(b.author, sizeof(b.author), stdin);

    printf("\nBook Details:\n");
    printf("ID: %d", b.bookId);
    printf("\nTitle: %s", b.title);
    printf("Author: %s", b.author);

    return 0;
}
