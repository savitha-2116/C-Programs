#include <stdio.h>

int main() {
    float expenses[30], total = 0;
    int i;

    printf("Enter daily expenses for 30 days:\n");
    for(i = 0; i < 30; i++) {
        scanf("%f", &expenses[i]);
        total = total + expenses[i];
    }

    printf("Total monthly expenses = %.2f\n", total);
    return 0;
}
