#include <stdio.h>

struct Course {
    int courseId;
    char courseName[30];
    int duration;
};

int main() {
    struct Course c;

    printf("Enter Course ID: ");
    scanf("%d", &c.courseId);

    printf("Enter Course Name: ");
    scanf("%s", c.courseName);

    printf("Enter Duration (months): ");
    scanf("%d", &c.duration);

    printf("\nCourse Details:\n");
    printf("ID: %d\nName: %s\nDuration: %d months\n",
           c.courseId, c.courseName, c.duration);

    return 0;
}
