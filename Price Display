#include <stdio.h>

int main() {
    int choice;

    printf("------ Cake Menu ------\n");
    printf("1. Chocolate Cake  - Rs.500\n");
    printf("2. Vanilla Cake    - Rs.400\n");
    printf("3. Strawberry Cake - Rs.450\n");
    printf("4. Black Forest    - Rs.600\n");
    printf("5. Red Velvet      - Rs.700\n");
    printf("-----------------------\n");

    printf("Enter your choice (1-5): ");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            printf("You selected Chocolate Cake\n");
            printf("Price = Rs.500\n");
            break;

        case 2:
            printf("You selected Vanilla Cake\n");
            printf("Price = Rs.400\n");
            break;

        case 3:
            printf("You selected Strawberry Cake\n");
            printf("Price = Rs.450\n");
            break;

        case 4:
            printf("You selected Black Forest Cake\n");
            printf("Price = Rs.600\n");
            break;

        case 5:
            printf("You selected Red Velvet Cake\n");
            printf("Price = Rs.700\n");
            break;

        default:
            printf("Invalid choice! Please select 1 to 5.\n");
    }

    return 0;
}
