#include <stdio.h>

struct Bank {
    int accNo;
    char name[30];
    float balance;
};

int main() {
    struct Bank b;

    printf("Enter Account Number: ");
    scanf("%d", &b.accNo);

    printf("Enter Name: ");
    scanf("%s", b.name);

    printf("Enter Balance: ");
    scanf("%f", &b.balance);

    printf("\nBank Account Details:\n");
    printf("Account No: %d\nName: %s\nBalance: %.2f\n",
           b.accNo, b.name, b.balance);

    return 0;
}
